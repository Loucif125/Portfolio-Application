{% extends 'base.html.twig' %}

{% block title %}{{ 'Connexion | Admin' }}{% endblock %}

{% block body %}
<div class="container mt-100">
    <div class="section-top-border" style="background-color: #141f4d; border-radius: 10px">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                {% if app.user %}
                    <div class="mt-8 ml-4 mr-4 mt-2 mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <h3 class="mb-30" style="text-align: center; color: #fff"><i class="fa fa-lock"></i> {{ 'Connexion Admin'|trans }}</h3>
                <form method="post">
                    <div class="mt-8 ml-4 mr-4">
                        <input type="email" name="email" placeholder="{{ 'Email'|trans }}" value="{{ last_username }}" required="" class="single-input">
                    </div>
                    <div class="mt-8 ml-4 mr-4 mt-2">
                        <input type="password" name="password" placeholder="{{'Password'|trans}}" required class="single-input">
                    </div>
                    <div class="mt-8 ml-4 mr-4 mt-2">
                        <label><input type="checkbox" name="_remember_me"> {{ 'Remember me' }}</label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="mt-8 ml-4 mr-4 mt-2" style="text-align: center; font-size: 1.5rem">
                        <button class="genric-btn primary radius btn-block" type="submit">{{ 'Connexion'|trans }}</button>
                    </div>
                    {% if error %}
                        <div class="mt-10 ml-4 mr-4 alert alert-danger" style="text-align: center"><i class="fa fa-info"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
