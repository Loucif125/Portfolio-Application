{% set activity = activities|first %}
<section class="service-area section-gap relative" id="service">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-10">
                <div class="title text-center">
                    <h1 class="mb-10 text-white">
                        {{ activity.globalDescription is not empty ? activity.globalDescription : '' }}
                    </h1>
                    <p>{{ activity.subGlobalDescription is not empty ? activity.subGlobalDescription : '' }}</p>
                </div>
            </div>
        </div>
    </div>
</section>